<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashBoradActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/newprimarycolor">

        <ImageView
            android:id="@+id/imgDrawer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"

            android:src="@drawable/navigationimag" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="6dp"
            android:text="Investigation"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="6dp"
            android:src="@drawable/logout"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/investigation"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Claim Investigation"
            android:textSize="25dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFileNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnheight"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btnbackground"
            android:gravity="center"
            android:text="Check File No"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>